/** index.wxss - 多巴胺波普风 Dopamine Pop Art Style **/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 24rpx;
  padding-bottom: 200rpx; /* Prevent content from being hidden by fixed bar */
  background-color: var(--bg-color);
  min-height: 100vh;
  box-sizing: border-box;
}

/* ===== Header ===== */
.header {
  margin-bottom: 32rpx;
  text-align: center;
}

.title {
  font-size: 56rpx;
  font-weight: 900;
  color: var(--text-main);
  display: block;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  background: var(--primary-color);
  padding: 8rpx 24rpx;
  border-radius: var(--radius-full);
  border: 3rpx solid var(--border-color);
  box-shadow: 3rpx 3rpx 0rpx var(--border-color);
  display: inline-block;
}

/* ===== Card - Pop Art Style ===== */
.card {
  width: 100%;
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  border: 4rpx solid var(--border-color);
  box-shadow: var(--shadow-card);
  padding: 24rpx;
  margin-bottom: 28rpx;
  position: relative;
  overflow: hidden;
}

/* ===== Hero Stage ===== */
.image-wrapper {
  width: 100%;
  aspect-ratio: 1;
  background: linear-gradient(135deg, #FFFBF0 0%, #FFF5E1 100%);
  border-radius: var(--radius-md);
  border: 3rpx dashed #CCCCCC;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
}

.image-wrapper.clickable {
  cursor: pointer;
}

.image-wrapper.clickable:active {
  transform: scale(0.98);
  border-color: var(--primary-color);
  border-style: solid;
  background: linear-gradient(135deg, #FFF9E6 0%, #FFEFCC 100%);
}

.hero-image {
  width: 100%;
  height: 100%;
  border-radius: var(--radius-md);
}

/* Placeholder */
.placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  color: var(--text-secondary);
}

.placeholder-icon {
  font-size: 80rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.placeholder-text {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
}

.placeholder-hint {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Floating Swap Button */
.swap-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background: var(--card-bg);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  border: 3rpx solid var(--border-color);
  box-shadow: 4rpx 4rpx 0rpx var(--border-color);
  z-index: 5;
  transition: all 0.15s ease;
}

.swap-btn:active {
  transform: translate(2rpx, 2rpx);
  box-shadow: 2rpx 2rpx 0rpx var(--border-color);
}

/* Loading Overlay */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 251, 240, 0.92);
  backdrop-filter: blur(8rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  border-radius: var(--radius-md);
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  font-size: 72rpx;
  animation: sparkle 1.2s ease-in-out infinite;
  display: block;
  margin-bottom: 20rpx;
}

@keyframes sparkle {
  0%, 100% { transform: scale(1) rotate(0deg); opacity: 1; }
  50% { transform: scale(1.2) rotate(180deg); opacity: 0.8; }
}

.loading-text {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  background: var(--primary-color);
  padding: 8rpx 24rpx;
  border-radius: var(--radius-full);
  border: 2rpx solid var(--border-color);
}

/* ===== Style Selector ===== */
.style-selector {
  margin-bottom: 24rpx;
  transition: opacity 0.3s;
}

.style-selector.disabled {
  opacity: 0.4;
  pointer-events: none;
}

.section-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 20rpx;
  display: block;
}

/* Style Tags - Pop Art Pills */
.style-tag-group {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.style-tag {
  padding: 14rpx 28rpx;
  background: var(--card-bg);
  border-radius: var(--radius-full);
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  border: 3rpx solid var(--border-color);
  box-shadow: 3rpx 3rpx 0rpx var(--border-color);
  transition: all 0.15s ease;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.style-tag:active {
  transform: translate(2rpx, 2rpx);
  box-shadow: 1rpx 1rpx 0rpx var(--border-color);
}

.style-tag.selected {
  background: var(--primary-color);
  font-weight: 800;
  border-width: 4rpx;
  box-shadow: 4rpx 4rpx 0rpx var(--border-color);
}

.style-tag.selected:active {
  transform: translate(2rpx, 2rpx);
  box-shadow: 2rpx 2rpx 0rpx var(--border-color);
}

/* Cache Indicator */
.cache-dot {
  font-size: 24rpx;
  color: #22C55E;
  font-weight: 900;
}

.style-tag.selected .cache-dot {
  color: #166534;
}

/* ===== Buttons ===== */
.action-area {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn {
  width: 100%;
  border-radius: var(--radius-full);
  font-size: 32rpx;
  font-weight: 800;
  padding: 28rpx 0;
  border: 4rpx solid var(--border-color);
  box-shadow: var(--shadow-btn);
  transition: all 0.1s ease;
  display: flex;
  justify-content: center;
  align-items: center;
  background: var(--card-bg);
  color: var(--text-main);
}

.btn:active {
  transform: translate(4rpx, 4rpx);
  box-shadow: 0rpx 0rpx 0rpx var(--border-color);
}

.generate-btn {
  background: var(--primary-color);
}

.generate-btn[disabled] {
  background: #E5E5E5;
  color: #999999;
  border-color: #CCCCCC;
  box-shadow: none;
  transform: none;
}

.save-btn {
  background: var(--secondary-accent);
  color: white;
  animation: popIn 0.3s ease-out;
}

@keyframes popIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

/* ===== Footer ===== */
.footer {
  margin-top: 8rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* ===== Fixed Bottom Bar ===== */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: var(--bg-color);
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  z-index: 100;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
}

.btn-group {
  display: flex;
  gap: 24rpx;
  width: 100%;
}

.restart-btn {
  flex: 1;
  background: var(--text-secondary); /* Or a lighter neutral color */
  color: white;
  border-color: #9CA3AF;
  box-shadow: 4rpx 4rpx 0rpx #9CA3AF;
}

.save-btn {
  flex: 2; /* Main action takes more space */
  background: var(--secondary-accent);
  color: white;
  animation: popIn 0.3s ease-out;
}

.full-width {
  width: 100%;
}
